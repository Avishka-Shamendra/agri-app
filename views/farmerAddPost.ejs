                            <% }else{  %>
                            <option value="Vavuniya">Vavuniya</option>
                            <% } %>
                        </select>
                      </div>
                    <div class="form-group">
                        <label for="description">Description</label>
                        <textarea class="form-control" id="description" name="description" placeholder="Description" rows="5" required><%=description%></textarea>
                    </div>
                    <small>Note that all posts will expire after 30 days</small>
                    <div class="form-group text-right">
                        <button class="btn btn-success" type="submit">Add New Post</button>
                    </div>
                </form>
            
        </div>
    </div>
</div>

<%- include('_footer') %>