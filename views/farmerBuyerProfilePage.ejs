<%- include('_header',{user}) %>

<div class="container py-4">
    <h3 class="p-3 text-center"><%=buyer.first_name+' '+buyer.last_name%></h3>
    <hr>
    <% if (error) {%>
        <div class="alert alert-danger text-center" role="alert">
            <%=error%>
        </div>
    <% } %>
    <% if (report_success) {%>
        <div class="alert alert-success text-center" role="alert">
            <%=report_success%>
        </div>
    <% } %>
    
    <h4 class="text-center">Buyer Profile</h4>
    
        <div class="text-center">
            
            <div class="row">
                <div class="col-sm-6 col-xs-12">
                    <p><i class="fas fa-envelope" style="margin-right: 6px;"></i> <%=buyer.email%> </p>
                </div>
                <div class="col-sm-6 col-xs-12">
                    <p><i class="fas fa-phone" style="margin-right: 6px;"></i> <%=buyer.contact_no%> </p>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6 col-xs-12">
                    <p><i class="fas fa-id-card" style="margin-right: 6px;"></i><%=buyer.nic%> </p>
                </div>
                <div class="col-sm-6 col-xs-12">
                    <p><i class="fas fa-map-marker-alt" style="margin-right: 8px;"></i><%=buyer.district%> </p>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6 col-xs-12">
                    <p><i class="fas fa-calendar-day" style="margin-right: 6px;"></i>Joined on: <%=buyer.joined.getFullYear()+'/'+("0" + (buyer.joined.getMonth() + 1)).slice(-2)+'/'+("0" + buyer.joined.getDate()).slice(-2) %> </p>
                </div>        
        </div>
        <div class="text-center">
            <button type="button" class="btn btn-outline-danger" data-toggle="modal" data-target="#reportModal">
                Report User to Admin
            </button>
            <div class="modal fade" id="reportModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Report User</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            Please provide your reasons for reporting. For example "posting inappropriate content".
                        </div>
                        <form class="p-3 text-left" method="POST" action="/farmer/reportBuyer/<%=buyer.uid%>">
                            <div class="form-group">
                                <label for="reasons">Reasons</label>
                                <textarea class="form-control" id="reasons" name="reasons" rows="3" required><%=reasons%></textarea>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                <button type="submit" class="btn btn-danger">Report User</button>
                            </div>
                        </form>
                        
                    </div>
                </div>
            </div>

        </div>

        
    <hr>
    
</div>


<%- include('_footer') %>