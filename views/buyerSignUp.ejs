                                <% }else{  %>
                                <option value="Gampaha">Gampaha</option>
                                <% } %>
                                <% if( district=='Hambantota') { %>
                                <option value="Hambantota" selected>Hambantota</option>
                                <% }else{  %>
                                <option value="Hambantota">Hambantota</option>
                                <% } %>
                                <% if( district=='Jaffna') { %>
                                <option value="Jaffna" selected>Jaffna</option>
                                <% }else{  %>
