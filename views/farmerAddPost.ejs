<%- include('_header',{user}) %>

<div class="container py-4">
    <div class="card  rounded shadow-lg border-success">
        <div class="card-body">
            <h3 class="text-center">Add Post</h3>
                <% if (error) {%>
                <div class="alert alert-danger" role="alert">
                    <%=error%>
                </div>
                <% } %>
                <form method="post" action="/farmer/addPost">
                    <div class="text-center mb-3">
                        <img src="/assets/add_new_post.jpg" alt="Farmers"
                            width="40%" />
                    </div>
                    <div class="row">
                        <div class="col-md-6 col-sm-12 align-self-center">
                            <div class="form-group">
                                <label for="title">Post Title</label>
                                <input class="form-control" type="text" id="title" name="title" placeholder="Title of Post" value="<%=title%>" required>
                            </div>
                        </div>
                        <div class="col-md-6 col-sm-12 align-self-center">
                            <div class="form-group">
                                <label for="product_name">Product Name</label>
                                <input class="form-control" type="text" id="product_name" name="product_name" placeholder="What is the product" value="<%=product_name%>" required>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 col-sm-12 align-self-center">
                            <div class="form-group">
                                <label for="quantity">Quantity <small>(kg)</small></label>
                                <input class="form-control" type="text" id="quantity" name="quantity" placeholder="Amount to be sold" value="<%=quantity%>" required>
                            </div>
                        </div>
                        <div class="col-md-6 col-sm-12 align-self-center">
                            <div class="form-group">
                                <label for="expected_price">Expected Unit Price <small>(Rs/kg)</small></label>
                                <input class="form-control" type="text" id="expected_price" name="expected_price" placeholder="Unit Price" value="<%=expected_price%>" required>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 col-sm-12 align-self-center">
                            <div class="form-group">
                                <label for="phone_num">Contact Number</label>
                                <input class="form-control" type="text" id="phone_num" name="phone_num" placeholder="Phone Number" value="<%=phone_num%>" required>
                            </div>
                        </div>
                        <div class="col-md-6 col-sm-12 align-self-center">
                            <div class="form-group">
                                <label for="product_category">Product Type</label>
                                    <select id="product_category" class="form-control" name="product_category" required>
                                        <option  selected>Choose...</option>
                                        <% if(product_category=='vegetable') {%>
                                            <option id="vegetable" value="vegetable" selected>Vegetable</option>
                                        <% }else {%>
                                            <option id="vegetable" value="vegetable">Vegetable</option>
                                        <%}%>
                                        <% if(product_category=='fruit') {%>
                                            <option id="fruit" value="fruit" selected>Fruit</option>
                                        <% }else {%>
                                            <option id="fruit" value="fruit">Fruit</option>
                                        <%}%>
                                        
                                        
                                    </select>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="address">Available Location/Address</label>
                        <textarea class="form-control" id="address" name="address" rows="3"><%=address%></textarea>
                    </div>
                    <div class="form-group">
                        <label for="district">Available District</label>
                        <select id="district" class="form-control" name="district" required>
                            <option  selected>Choose...</option>
                            <option value="Anuradhapura">Anuradhapura</option>
