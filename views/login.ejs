<%- include('_header',{user}) %>

 <div class="container py-4">
     <div class="card  rounded shadow-lg border-success">
        <div class="row card-body">
            <div class="col-md-6 col-sm-12 text-center">
                <img src="assets/login.jpg" alt="Login"
                    width="80%" />
                <br>
                <small><a href="https://www.freepik.com/vectors/website" class="text-success">Website vector created by stories - www.freepik.com</a></small> 
            </div>
            <div class="col-md-6 col-sm-12 align-self-center">
            
                <h3 class="text-center">Log  In</h3>
                <form method="POST" action="/login">
                    <% if (error) {%>
                    <div class="alert alert-danger" role="alert">
                        <%=error%>
                    </div>
                    <% } %>
                    <div class="form-group">
                        <label for="email">Enter Your Email</label>
                        <input type="email" class="form-control" id="email" name="email" placeholder="Email" required>
                    </div>
    
                    <div class="form-group">
                        <label for="password">Enter Password</label>
                        <input type="password" class="form-control" id="password" name="password" placeholder="Password" required>
                    </div>
    
                    <div class="text-right">
                        <button type="submit" class="btn btn-success">Log In Now</button>
                    </div>
                </form>
            </div>
            
        </div>

     </div>

 </div>

<%- include('_footer') %>