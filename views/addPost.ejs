<%- include('_header',{user}) %>


<div class="contact-clean">
    <form method="post">
        <h2 class="text-center">Add Post</h2>
        <div class="form-group"><input class="form-control" type="text" id="item_name" name="item_name" placeholder="Item"></div>
        <div class="form-group"><input class="form-control" type="text" id="price_per_kg" name="price_per_kg" placeholder="Price per Kg"></div>
        <div class="form-group"><input class="form-control" type="text" id="weight" name="weight" placeholder="Amount to be sold"></div>
        <div class="form-group"><input class="form-control" type="text" id="phone_num" name="phone_num" placeholder="Phone Number"></div>
        <div class="form-group"><textarea class="form-control" id="description" name="description" placeholder="Description" rows="10"></textarea></div>
        <div class="form-group"><input type="file" id="pic_item" class="&quot;form-control&quot;"></div>
        <div class="form-group"><button class="btn btn-primary" type="submit">Add post</button></div>
    </form>
</div>

<%- include('_footer') %>
